{% schema %}
{
  "name": "Press & Store Marquee",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "In the Press & Stores"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "See what people are saying and where you can find us"
    },
    {
      "type": "range",
      "id": "marquee_speed",
      "label": "Marquee Speed (seconds)",
      "min": 20,
      "max": 100,
      "step": 10,
      "default": 60
    },
    {
      "type": "select",
      "id": "section_padding",
      "label": "Section Padding",
      "options": [
        {
          "value": "normal",
          "label": "Normal"
        },
        {
          "value": "large",
          "label": "Large"
        }
      ],
      "default": "normal"
    }
  ],
  "blocks": [
    {
      "type": "press_article",
      "name": "Press Article",
      "settings": [
        {
          "type": "text",
          "id": "source",
          "label": "Publication Source",
          "default": "Detroit Free Press"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Article Title",
          "default": "Article Title Here"
        },
        {
          "type": "textarea",
          "id": "excerpt",
          "label": "Article Excerpt",
          "default": "Brief description of the article..."
        },
        {
          "type": "text",
          "id": "date",
          "label": "Publication Date (YYYY-MM-DD)",
          "default": "2024-03-15"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Press & Store Marquee",
      "blocks": [
        {
          "type": "press_article"
        },
        {
          "type": "press_article"
        }
      ]
    }
  ]
}
{% endschema %}