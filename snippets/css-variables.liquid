{% style %}
  {% # Loads all font variantions with display: swap %}
  {{ settings.type_primary_font | font_face: font_display: 'swap' }}
  {{ settings.type_primary_font | font_modify: 'weight', 'bold' | font_face: font_display: 'swap' }}
  {{ settings.type_primary_font | font_modify: 'weight', 'bold' | font_modify: 'style', 'italic' | font_face: font_display: 'swap' }}
  {{ settings.type_primary_font | font_modify: 'style', 'italic' | font_face: font_display: 'swap' }}

  :root {
    --font-primary--family: {{ settings.type_primary_font.family }}, {{ settings.type_primary_font.fallback_families }};
    --font-primary--style: {{ settings.type_primary_font.style }};
    --font-primary--weight: {{ settings.type_primary_font.weight }};
    --page-width: {{ settings.max_page_width }};
    --page-margin: {{ settings.min_page_margin }}px;
    --color-background: {{ settings.background_color | default: '#ffffff' }};
    --color-foreground: {{ settings.foreground_color | default: '#000000' }};
    --style-border-radius-inputs: {{ settings.input_corner_radius }}px;
    
    /* ACTUAL Savor Theme Colors */
    --color-primary: #a42325; /* Deep red from Savor theme */
    --color-primary-dark: #780406e8; /* Darker red hover */
    --color-primary-light: #d76668; /* Lighter red */
    
    --color-secondary: #000000; /* Black */
    --color-secondary-dark: #1a1a1a; /* Dark gray */
    --color-secondary-light: #333333; /* Medium gray */
    
    --color-accent: #e8d5c7; /* Cream from scheme-3 */
    --color-accent-dark: #d0d0d0; /* Darker cream */
    --color-accent-light: #f1e3d9c4; /* Lighter cream */
    
    --color-background-alt: #f1f1f1; /* Light gray background */
    
    --color-text: #000000; /* Black text */
    --color-text-light: #333333; /* Dark gray */
    --color-text-muted: #666666; /* Medium gray */
    
    --color-border: #e6e6e6; /* Light gray border */
    --color-border-light: rgba(230, 230, 230, 0.5);
    
    /* Typography */
    --font-weight-light: 300;
    --font-weight-normal: 400;
    --font-weight-medium: 500;
    --font-weight-semibold: 600;
    --font-weight-bold: 700;
    --font-weight-black: 900;
    
    /* Spacing */
    --spacing-xs: 0.5rem;
    --spacing-sm: 1rem;
    --spacing-md: 1.5rem;
    --spacing-lg: 2rem;
    --spacing-xl: 3rem;
    --spacing-2xl: 4rem;
    --spacing-3xl: 6rem;
    
    /* Shadows */
    --shadow-sm: 0 2px 4px rgba(45, 42, 36, 0.1);
    --shadow-md: 0 4px 12px rgba(45, 42, 36, 0.15);
    --shadow-lg: 0 8px 24px rgba(45, 42, 36, 0.2);
    --shadow-xl: 0 16px 40px rgba(45, 42, 36, 0.25);
    
    /* Border radius */
    --radius-sm: 4px;
    --radius-md: 8px;
    --radius-lg: 16px;
    --radius-xl: 24px;
    --radius-full: 50%;
    
    /* Transitions */
    --transition-fast: 0.15s ease-out;
    --transition-normal: 0.3s ease-out;
    --transition-slow: 0.5s ease-out;
    
    /* Z-index */
    --z-dropdown: 1000;
    --z-sticky: 1020;
    --z-fixed: 1030;
    --z-modal-backdrop: 1040;
    --z-modal: 1050;
    --z-popover: 1060;
    --z-tooltip: 1070;
  }
{% endstyle %}
